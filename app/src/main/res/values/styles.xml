<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Styles Login -->
    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="android:textColor">@color/tertiary_text</item>
    </style>

    <style name="FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/tertiary_text</item>
        <item name="android:textSize">@dimen/text_appearance_size</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:textSize">@dimen/size_hint_default</item>
        <item name="android:textColorPrimary">@color/tertiary_text</item>
        <item name="colorAccent">@color/tertiary_text</item>
        <item name="colorControlNormal">@color/tertiary_text</item>
        <item name="colorControlActivated">@color/tertiary_text</item>
    </style>

    <!-- CreateAccount and UdateAccount -->
    <style name="RaisedButtonCreateAccount" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/tertiary_text</item>
    </style>

    <!-- Theme action bar -->
    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/tertiary_text</item>
    </style>

    <!-- Styles Delete -->
    <style name="RaisedButtonDeleteAccount" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/btn_delete</item>
        <item name="colorControlHighlight">@color/btn_delete_click</item>
        <item name="android:textColor">@color/tertiary_text</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.modules.module1.quiz.QuizPage5Module1Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">

        <!-- Titulo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:gravity="center"
                android:textSize="@dimen/txtLessons_normal"
                android:textColor="@color/primary_text"
                android:background="@drawable/curved_content"/>


        </LinearLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/weight_default"
            android:layout_weight="58"
            android:orientation="vertical"
            android:background="@drawable/curved_content">

            <!-- Leccion -->
            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fab_margin"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/txtLessons_min"/>

            <!-- Ejemplo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_content"
                android:backgroundTint="@color/divider"
                android:orientation="vertical"
                android:padding="@dimen/padding_layout">

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton android:id="@+id/rbOption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/txtLessons_min"/>

                    <RadioButton android:id="@+id/rbOption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/txtLessons_min"/>

                    <RadioButton android:id="@+id/rbOption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/txtLessons_min"/>

                    <RadioButton android:id="@+id/rbOption4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/txtLessons_min"/>

                    <RadioButton android:id="@+id/rbOption5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/txtLessons_min"/>

                </RadioGroup>


            </LinearLayout>

        </LinearLayout>


        <!-- Next -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/weight_default"
            android:layout_weight="17">

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="@dimen/logoMin"
                android:layout_height="@dimen/logoMin"
                android:background="@drawable/check"
                android:theme="@style/RaisedButton"
                android:layout_margin="@dimen/fab_margin"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
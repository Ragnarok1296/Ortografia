<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.modules.module1.lesson1.Lesson1Page1Module1Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">

        <!-- Titulo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:gravity="center"
                android:textSize="@dimen/txtLessons_normal"
                android:textColor="@color/primary_text"
                android:background="@drawable/curved_content"/>

        </LinearLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/weight_default"
            android:layout_weight="58"
            android:orientation="vertical"
            android:background="@drawable/curved_content">

            <!-- Leccion -->
            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fab_margin"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/txtLessons_min"/>


            <!-- texto Ejemplo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtExample"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/size_hint_default"
                android:layout_marginBottom="@dimen/fab_margin"/>


            <!-- Ejemplo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_content"
                android:backgroundTint="@color/divider"
                android:padding="@dimen/padding_layout">

                <TextView
                    android:id="@+id/txtExample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/txtLessons_min"/>


            </RelativeLayout>

        </LinearLayout>


        <!-- Next -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/weight_default"
            android:layout_weight="17">

            <Button
                android:id="@+id/btnNextP2"
                android:layout_width="@dimen/logoMin"
                android:layout_height="@dimen/logoMin"
                android:background="@drawable/next"
                android:theme="@style/RaisedButton"
                android:layout_margin="@dimen/fab_margin"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>